FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     rhoPimpleFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         10;

deltaT          1;

writeControl    adjustableRunTime;

writeInterval   10;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression on;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

adjustTimeStep  no;

maxCo           10;

maxDeltaT       1;

libs (
    "libswakSourceFields.so"
    "libsimpleSwakFunctionObjects.so"
    "libswakFvOptions.so"
    "libswakFunctionObjects.so"
    "libswakPythonIntegration.so"
);

functions {
    // showMeshData {
    //     type listMeshData;
    // }
    getPerformances {
        type solverPerformanceToGlobalVariables;
        fieldNames (
            U
            p
            rho
        );
        toGlobalNamespace solverPerformance;
        outputControl timeStep;
        outputInterval 1;
    }
    printPerformance {
        type pythonIntegration;
        startCode "";
        writeCode "";
        executeFile "$FOAM_CASE/system/printPerformances.py";
        endFile $executeFile;
        swakToPythonNamespaces (
            solverPerformance
        );
        interactiveAfterException true;
   }
   temperature {
        type swakExpression;
        valueType internalField;
        accumulations (
            min
            max
            weightedAverage
            weightedQuantile0.5
            weightedQuantile0.95
        );
        expression "T";
        verbose true;
    }
    temperatureSolid {
        $temperature;
        valueType cellZone;
        zoneName porosity;
    }
    poroTime {
        type solveTransportPDE;

        outputControl   timeStep;
        outputInterval  1;

        solveAt timestep;
        fieldName poroTime;
        steady true;

        rho "1" [0 0 0 0 0 0 0];

        diffusion "1e-4" [0 2 -1 0 0 0 0];
        source "0" [0 0 0 0 0 0 0];

        phi "phi" [0 3 -1 0 0];
    }
    poroTime2 {
        $poroTime;
        fieldName poroTime2;
        source "zone(porosity) ? 1 : 0" [0 0 0 0 0 0 0];
    }
}

// ************************************************************************* //
