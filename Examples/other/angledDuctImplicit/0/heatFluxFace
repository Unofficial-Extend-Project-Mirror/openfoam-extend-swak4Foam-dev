FoamFile
{
    version     2.0;
    format      ascii;
    class       surfaceScalarField;
    location    "0";
    object      heatFlux;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// this is not the correct dimension. I know

dimensions      [0 0 0 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    "(front|back|wall|porosityWall)"
    {
        type            groovyBCFixedValue;
        value           uniform 0;
        valueExpression "snGrad(h)*alphat";
    }
    inlet
    {
        type            zeroGradient;
    }
    outlet
    {
        type            zeroGradient;
    }
}


