{
    wall
    {
        type            zeroGradient;
    }

    inlet
    {
        // type            fixedValue;
        // value           uniform 1;
        type            groovyBC;
        value           uniform 0;
        valueExpression "filled";
        //        valueExpression "fraction";

#include "commonVariables"

    }

    outlet
    {
        type            inletOutlet;
        inletValue      uniform 0;
        value           uniform 0;
    }

    atmosphere
    {
        type            inletOutlet;
        inletValue      uniform 0;
        value           uniform 0;
    }

    defaultFaces
    {
        type            empty;
    }
}

