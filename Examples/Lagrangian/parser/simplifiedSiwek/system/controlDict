FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     coalChemistryFoam;

startFrom       latestTime;

startTime       0;

stopAt          endTime;

endTime         0.75;

deltaT          0.0001;

writeControl    adjustableRunTime;

writeInterval   0.0025;

purgeWrite      0;

writeFormat     ascii;

writePrecision  10;

writeCompression compressed;

timeFormat      general;

timePrecision   6;

runTimeModifiable yes;

adjustTimeStep  yes;

maxCo           0.8;

maxDeltaT       1;

libs (
    "libsimpleSwakFunctionObjects.so"
    "libswakLagrangianParser.so"
    "libswakLagrangianCloudSourcesFunctionPlugin.so"
);

functions {
    limestoneFraction {
        type swakExpression;
        valueType internalField;
        verbose true;
        accumulations (
            min
            max
            weightedAverage
        );
        expression "lcsVolumeFraction(limestoneCloud1)";
    }
    coalFraction {
        $limestoneFraction;
        expression "lcsVolumeFraction(coalCloud1)";
    }
    // coalPosition {
    //     type swakExpression;
    //     outputControlMode timeStep;
