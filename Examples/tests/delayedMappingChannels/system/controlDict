FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     scalarTransportFoam;

startFrom       latestTime;

startTime       0;

stopAt          endTime;

endTime         2.5;

// deltaT          0.002;
deltaT          0.01;

writeControl    adjustableRunTime;

writeInterval   0.1;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression yes;

timeFormat      general;

timePrecision   6;

runTimeModifiable yes;

adjustTimeStep  yes;

maxCo           0.2;
maxAlphaCo      0.2;

maxDeltaT       1;

libs (
    "libgroovyBC.so"
    "libsimpleSwakFunctionObjects.so"
    "libswakFunctionObjects.so"
    "libswakVelocityFunctionPlugin.so"
);

functions {
    var1Val {
        type patchExpression;
        patches (
            inlet1
            outlet1
            inlet2
            outlet2
        );
        expression "T";
        verbose true;
        accumulations (
            min
            max
            average
        );
    }
    TForPostproc {
        type expressionField;
        variables (
            "Ttmp=T;"
        );
        expression "Ttmp";
        fieldName TCopy;
        outputControl outputTime;
        autowrite true;
    }
}

