FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     icoFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         0.5;

deltaT          0.005;

writeControl    timeStep;

writeInterval   20;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression on;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

libs (
    "libswakStateMachine.so"
);

functions {
    firstStateMachine {
        type createAndUpdateStateMachine;
        valueType internalField;
        states (
            start
            one
            two
            buh
        );
        machineName firstMachine;
        initialState start;
        transitions (
            {
                from start;
                to one;
                description "Move away from first state";
                expression "true";
                logicalAccumulation or;
            }
            {
                from one;
                to two;
                description "The time has come";
                expression "time()>=0.05";
                logicalAccumulation or;
            }
        );
    }
    moveBackToOneAtOutput {
        type stateMachineSetState;
        machineName firstMachine;
        state one;
        outputControlMode outputTime;
    }
}

// ************************************************************************* //
