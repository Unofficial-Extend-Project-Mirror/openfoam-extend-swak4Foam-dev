FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     icoFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         0.5;

deltaT          0.005;

writeControl    timeStep;

writeInterval   20;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression compressed;

timeFormat      general;

timePrecision   6;

runTimeModifiable yes;

functions (
    pythonSimple
    {
        type pythonIntegration;
        startCode "print 'Starting';a=0; print dir()";
        executeCode "a+=1; print 'a:',a";
        writeCode "print 'Never been here'";
        //        tolerateExceptions true;
    }
    pythonPyFoam
    {
        type pythonIntegration;
        startCode "from os import path;from PyFoam.RunDictionary.ParsedParameterFile import ParsedParameterFile";
        // executeCode "print 'Time till end:',float(ParsedParameterFile(path.join(caseDir,'system','controlDict'))['endTime'])-runTime";
        executeFile "$FOAM_CASE/executePyFoam.py";
        writeCode "print 'Never been here'";
        //        tolerateExceptions true;
    }
    /*    pythonPythonFlu
    {
        type pythonIntegration;
        startCode "import Foam.OpenFOAM as OF";
        writeCode "print ";
        executeCode "print 'Nr of Procs:',OF.Pstream.nProcs()";
        tolerateExceptions true;
    }
    pythonPythonFluFull
    {
        type pythonFluIntegration;
        startCode "print dir()";
        writeCode "print ";
        executeCode "print 'Nr of Procs:',OpenFOAM.Pstream.nProcs()";
        //        tolerateExceptions true;
        } */

    addScalar
    {
        type addGlobalVariable;
        outputControl timeStep;
        outputInterval 1;
        globalScope pythonVars;
        globalName aScalar;
        valueType scalar;
        value 42;
    }
    addVector
    {
        type addGlobalVariable;
        outputControl timeStep;
        outputInterval 1;
        globalScope pythonVars;
        globalName aVector;
        valueType vector;
        value (1 2 3);
    }

    // Clumsy, but we need these two for the first initialization
    testScalar
    {
        type addGlobalVariable;
        outputControl timeStep;
        outputInterval 1;
        globalScope testPython;
        globalName newTime;
        valueType scalar;
        value 42;
    }
    testVector
    {
        type addGlobalVariable;
        outputControl timeStep;
        outputInterval 1;
        globalScope testPython;
        globalName newVector;
        valueType vector;
        value (1 2 3);
    }

    pythonGetGlobals
    {
        type pythonIntegration;
        swakToPythonNamespaces ( pythonVars );
        startCode "print 'Start:',aVector,aScalar";
        executeCode "print 'Running:',map(lambda x:x*(runTime+aScalar),aVector);newTime=aScalar*runTime;newVector=(runTime,-runTime,1)";
        writeCode "print 'Never been here'";
        //        tolerateExceptions true;
        pythonToSwakNamespace testPython;
        pythonToSwakVariables (  newTime newVector );
    }
);

libs (
    "libgroovyBC.so"
    "libpythonIntegration.so"
    "libswakFunctionObjects.so"
);

